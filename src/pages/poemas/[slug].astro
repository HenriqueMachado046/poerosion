---
import { getCollection, type CollectionEntry } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const poemas = await getCollection('poemas');
  return poemas.map((poem: { slug: any; }) => ({
    params: { slug: poem.slug },
    props: { poem },
  }));
}

interface Props {
  poem: CollectionEntry<'poemas'>;
}

const { poem } = Astro.props;
const { Content } = await poem.render();

function formatDate(date: Date) {
  return date.toLocaleDateString('pt-BR', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<Base
  title={`${poem.data.title} — Versos do Cosmos`}
  description={poem.data.excerpt}
>
  <a href="#main-content" class="skip-link">Ir para o conteúdo</a>

  <nav class="breadcrumb" aria-label="Navegação de volta">
    <a href="/" class="back-link">
      <span aria-hidden="true">←</span> todos os poemas
    </a>
  </nav>

  <article class="poem-article" aria-labelledby="poem-title">

    <header class="poem-header">
      <div class="poem-meta">
        <time datetime={poem.data.date.toISOString()} class="poem-date">
          {formatDate(poem.data.date)}
        </time>
        {poem.data.tags.length > 0 && (
          <ul class="poem-tags" role="list" aria-label="Categorias">
            {poem.data.tags.map((tag: any) => (
              <li class="poem-tag">{tag}</li>
            ))}
          </ul>
        )}
      </div>

      <h1 id="poem-title" class="poem-title">{poem.data.title}</h1>

      {poem.data.excerpt && (
        <p class="poem-excerpt">{poem.data.excerpt}</p>
      )}
    </header>

    <div class="poem-divider" aria-hidden="true">
      <span>∞</span>
    </div>

    <div class="poem-body">
      <Content />
    </div>

    <div class="poem-divider" aria-hidden="true">
      <span>∞</span>
    </div>

  </article>

  <footer class="poem-footer">
    <a href="/" class="back-link">← ver todos os poemas</a>
  </footer>
</Base>

<style>
  /* ── Breadcrumb ── */
  .breadcrumb {
    margin-bottom: 2.5rem;
  }

  .back-link {
    font-size: 0.85rem;
    color: var(--text-muted);
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
  }

  .back-link:hover {
    color: var(--accent);
  }

  /* ── Article ── */
  .poem-article {
    max-width: var(--max-prose);
  }

  /* ── Header ── */
  .poem-header {
    margin-bottom: 2rem;
  }

  .poem-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .poem-date {
    font-size: 0.8rem;
    color: var(--text-muted);
    letter-spacing: 0.06em;
  }

  .poem-tags {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  .poem-tag {
    font-size: 0.7rem;
    letter-spacing: 0.08em;
    padding: 0.15rem 0.55rem;
    border-radius: 999px;
    border: 1px solid var(--border);
    color: var(--text-muted);
    background: rgba(255,255,255,0.03);
  }

  .poem-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 300;
    line-height: 1.15;
    letter-spacing: -0.01em;
    background: linear-gradient(135deg, var(--text-primary) 50%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
  }

  .poem-excerpt {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.8;
    font-style: italic;
  }

  /* ── Divider ── */
  .poem-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin: 2.5rem 0;
    color: var(--accent);
    opacity: 0.5;
    font-size: 0.9rem;
  }

  .poem-divider::before,
  .poem-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border);
  }

  /* ── Poem body (the rendered markdown) ── */
  .poem-body {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    line-height: 2;
    letter-spacing: 0.015em;
    color: var(--text-primary);
  }

  /* Poem stanzas: each paragraph is a stanza */
  .poem-body :global(p) {
    margin-bottom: 1.8em;
    max-width: var(--max-prose);
    /* no text-justify — better for dyslexia */
    text-align: left;
  }

  .poem-body :global(p:last-child) {
    margin-bottom: 0;
  }

  /* ── Footer ── */
  .poem-footer {
    margin-top: 3rem;
  }
</style>
